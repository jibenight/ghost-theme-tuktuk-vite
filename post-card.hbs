
{{!-- blog posts --}} 
    
{{#match @custom.feed_layout "Grid"}}
    <article class="post-card w-full md:w-1/2 lg:w-1/3 p-4 post-card opacity-0 translate-y-8 transition-all duration-700 ease-in-out will-change-transform" data-observe>
        <a href="{{url}}" aria-label="link for card article">          
            <div class=" h-full bg-white dark:bg-slate-900 rounded-3xl">
                <img class="w-full h-48 object-cover rounded-t-3xl"
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w,
                            {{img_url feature_image size="xl"}} 2000w"
                    sizes="(max-width: 1000px) 400px, 800px"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                />
                <div class="p-8">
                    
                    <span class=" flex text-xs sm:text-sm font-bold text-black dark:text-white">{{#if featured}}<span class="flex items-center text-red-500">{{> "icons/fire"}}&nbsp;{{t "Featured"}}</span>&nbsp;-&nbsp;{{/if}}{{#primary_tag}}{{name}}{{/primary_tag}} </span>
                    
                    <h3 class="font-heading text-2xl text-slate-800 dark:text-white hover:text-slate-600 group-hover:underline font-black">
                        {{#unless access}}
                            {{^has visibility="public"}}
                                {{#unless feature_image}}
                                    {{> "icons/lock"}}
                                {{/unless}}
                            {{/has}}
                        {{/unless}}
                    {{title}}
                    </h3>

                    {{#if excerpt}}
                        <p class="text-slate-600 dark:text-white  hidden lg:block">
                            {{excerpt characters="200"}}...
                            <a href='{{url}}'>
                                <span style="color:{{@site.accent_color}};" class="hover:opacity-75">{{ t "Read More"}}</span>
                            </a>
                        </p>
                    {{/if}}
                    <br>
                    <p class="text-xs sm:text-sm text-slate-500 dark:text-white italic"> 
                        <time datetime="{{date format="YYYY-MM-DD"}}">
                            {{date}}
                        </time>
                        &bull; 
                        {{#if reading_time}}
                            <span>
                                {{reading_time minute="1 minute" minutes="% minutes"}}
                            </span>
                        {{/if}}
                        {{#if @site.comments_enabled}}
                            {{t "comment_count"}}
                        {{/if}}
                        
                    </p>
                </div>
            </div>
        </a>
    </article>
{{/match}}

{{#match @custom.feed_layout "List"}}
    <article class="post-card">
        <div class="w-full p-4">
            <div class="flex flex-wrap h-full bg-white dark:bg-slate-900 overflow-hidden rounded-3xl">
                <div class="w-full md:w-1/2">
                    <img class="w-full h-full object-cover"
                        srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w"
                        sizes="(max-width: 1000px) 400px, 800px"
                        src="{{img_url feature_image size="m"}}"
                        alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                        loading="lazy"/>
                </div>
                <div class="flex-1">
                    <div class="md:max-w-lg p-10 h-full">
                        <div class="flex flex-col justify-between h-full">
                            <div class="flex-initial mb-8">
                                <p class="mb-3 text-sm text-slate-500 font-bold">
                                    {{#primary_tag}}
                                        <span class="text-xs sm:text-sm font-bold" style="color:{{@site.accent_color}};">{{name}}</span>
                                    {{/primary_tag}} 
                                    &bull;
                                    <time datetime="{{date format="YYYY-MM-DD"}}">
                                        {{date}}
                                    </time>
                                    &bull; 
                                    {{#if reading_time}}
                                        <span>
                                            {{reading_time}}
                                        </span>
                                    {{/if}}
                                    {{#if @site.comments_enabled}}
                                        <span>
                                            {{comment_count}}
                                        </span>
                                    {{/if}}
                                </p>
                                <a class="group inline-block mb-4" href="{{url}}">
                                    <h3 class="font-heading text-lg text-slate-900 dark:text-white  hover:opacity-75 group-hover:underline font-black">
                                        {{#unless access}}
                                            {{^has visibility="public"}}
                                                {{#unless feature_image}}
                                                    {{> "icons/lock"}}
                                                {{/unless}}
                                            {{/has}}
                                        {{/unless}}
                                        {{title}}
                                    </h3>
                                </a>
                                {{#if excerpt}}
                                    <p class="text-slate-600 dark:text-white  hidden lg:block">
                                        {{excerpt}}...
                                    </p>
                                {{/if}}
                            </div>
                            <div class="flex-initial">
                                <div class="flex flex-wrap -m-2">
                                    <div class="w-full md:w-auto p-2">
                                        <a class="block w-full px-4 py-2.5 text-sm text-center text-white font-bold rounded-full hover:opacity-75" href="{{url}}" style="background-color:{{@site.accent_color}};">
                                            {{ t "Read More"}}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>
{{/match}}

    



                    
                    
                   