{{!< default}}

{{#tag}}
<div class="container mx-auto {{#if feature_image}} bg-cover rounded-3xl bg-center" style="background-image:url('{{img_url feature_image size="xl"}}');{{/if}}">
    <div class="2xl:flex mb-4 {{#if feature_image}} py-16 px-10{{/if}} overflow-hidden rounded-3xl"> 
        <div class="flex  flex-wrap flex-col items-center {{#if feature_image}}lg:w-1/3{{else}}w-full{{/if}} p-5 bg-slate-100 dark:bg-slate-800 rounded-3xl">
            <div class="flex-1 p-4">
                <div class="flex flex-col h-full">
                    <div class="flex-initial {{#unless description}} w-full {{/unless}} ">
                        <h3 class="font-heading m-2 dark:text-slate-200 text-4xl text-slate-800 font-black tracking-tight text-center">
                            {{name}}
                        </h3>
                    </div>
                    {{#if description}}
                    <div class="flex-initial">
                        <p class="text-slate-900 dark:text-slate-200 font-bold text-center">{{description}}</p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div> 
    </div>
</div>
{{/tag}}

<div class="container mx-auto my-5">
    <div class="py-16 px-2 lg:px-8 bg-slate-100 dark:bg-slate-800 rounded-3xl">
        {{#tag}} 
            <div class="mb-6">
                <h2 class="italic text-center dark:text-slate-200 font-heading font-bold text-2xl sm:text-4xl">{{t "A collection of"}} {{plural ../pagination.total empty='zero posts' singular='% post' plural='% '}}{{t "posts"}}</h2>
            </div>
        {{/tag}}
            <div class="flex flex-wrap -m-4 mb-6 post-feed">
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            </div>
    </div>
</div>
         
 


